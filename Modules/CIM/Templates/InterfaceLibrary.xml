<GuiXml>
	<Controls>

        <Control name="BETTERUI_Generic_ScrollListTemplate" mouseEnabled="true" virtual="true">
            <OnMouseWheel>
                if self.scrollList.active then
                    if delta > 0 then
                        self.scrollList:MovePrevious()
                    else
                        self.scrollList:MoveNext()
                    end
                end
            </OnMouseWheel>

            <OnMouseUp>
                -- Allow mouse click to select an item, will probably have an option to disable this behaviour
                    -- Will implement
            </OnMouseUp>

            <Controls>
                <Scroll name="$(parent)Scroll">
                    <!-- <Anchor point="TOPLEFT" relativePoint="TOPLEFT" />
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" /> -->
                    <AnchorFill />
                </Scroll>

                <Control name="$(parent)ListScreenCenterIsAlongTop">
                    <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="LEFT" />
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM" />

                    <Controls>
                        <Control name="$(parent)ListScreenCenter">
                            <Anchor point="CENTER" relativePoint="TOPRIGHT" />
                        </Control>

                    </Controls>
                </Control>
            </Controls>
        </Control>

        <!-- The below 2 controls are redefinitions of ZOS's original NavQuadrant_1 anchors to facilitate smooth transitions and compatibility -->
        <Control name="BETTERUI_NavQuadrant_1_Anchors" virtual="true">
            <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_PANEL_WIDTH" />
            <Anchor point="TOPLEFT" relativeTo="GuiRoot" offsetX="BETTERUI_GAMEPAD_QUADRANT_1_LEFT" />
            <Anchor point="BOTTOMLEFT" relativeTo="GuiRoot" offsetX="BETTERUI_GAMEPAD_QUADRANT_1_LEFT" />
        </Control>
        <Control name="BETTERUI_NavQuadrant_1_ContainerAnchors" virtual="true">
            <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_PANEL_CONTAINER_WIDTH" />
            <Anchor point="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" />
            <Anchor point="BOTTOMLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" />
        </Control>

        <Control name="BETTERUI_HeaderTitleAnchors" virtual="true">
            <Anchor point="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" offsetY="20" />
            <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" offsetX="0" />
        </Control>

        <Label name="BETTERUI_GenericColumn_TextTemplate" font="ZoFontGamepad27" horizontalAlignment="LEFT" wrapMode="ELLIPSIS" virtual="true" modifyTextType="UPPERCASE"/>

        <Label name="BETTERUI_MenuEntryLabelTemplate" font="ZoFontGamepad34" verticalAlignment="CENTER" wrapMode="ELLIPSIS" virtual="true">
            <Anchor point="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING"/>
            <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_LIST_ENTRY_WIDTH"/>
        </Label>

        <Label name="BETTERUI_FooterTemplate" font="ZoFontGamepad45" wrapMode="ELLIPSIS" virtual="true" modifyTextType="UPPERCASE" />
        <Label name="BETTERUI_FooterSmallTemplate" font="ZoFontGamepad27" wrapMode="ELLIPSIS" virtual="true" modifyTextType="UPPERCASE" />


        <Texture name="BETTERUI_MenuEntryIconTemplate" tier="MEDIUM" inherits="ZO_MultiIcon" excludeFromResizeToFitExtents="true" level="1" pixelRoundingEnabled="true" virtual="true">
            <Dimensions x="32" y="32" />
            <Anchor point="CENTER" relativeTo="$(parent)Label" relativePoint="LEFT" offsetX="-24" />
        </Texture>

        <!-- SPINNER -->

        <Control name="BETTERUI_SpinnerButtons" virtual="true">
            <Controls>
                <Button name="$(parent)Decrease">
                    <Dimensions x="20" y="32" />
                    <Anchor point="LEFT"/>
                    <Textures normal="EsoUI/Art/Miscellaneous/Gamepad/spinner_arrow_left_up.dds"
                              pressed="EsoUI/Art/Miscellaneous/Gamepad/spinner_arrow_left_down.dds"
                              disabled="EsoUI/Art/Miscellaneous/Gamepad/spinner_arrow_left_disabled.dds"/>
                    <OnClicked>
                        BETTERUI.Banking.Window.spinner.spinner:ModifyValue(-1)
                    </OnClicked>
                </Button>

                <Button name="$(parent)Increase">
                    <Dimensions x="20" y="32" />
                    <Anchor point="RIGHT"/>
                    <Textures normal="EsoUI/Art/Miscellaneous/Gamepad/spinner_arrow_right_up.dds"
                              pressed="EsoUI/Art/Miscellaneous/Gamepad/spinner_arrow_right_down.dds"
                              disabled="EsoUI/Art/Miscellaneous/Gamepad/spinner_arrow_right_disabled.dds"/>
                    <OnClicked>
                        BETTERUI.Banking.Window.spinner.spinner:ModifyValue(1)
                    </OnClicked>
                </Button>
            </Controls>
        </Control>

        <Control name="BETTERUI_GamepadSpinner" inherits="BETTERUI_SpinnerButtons ZO_GamepadSpinnerStyle" virtual="true">
            <Controls>
                <Label name="$(parent)Display" font="ZoFontGamepadCondensed34" horizontalAlignment="CENTER" verticalAlignment="CENTER" >
                    <Anchor point="TOPLEFT" offsetX="18" offsetY="-2"/>
                    <Anchor point="BOTTOMRIGHT" offsetX="-22" offsetY="0"/>
                </Label>
            </Controls>
        </Control>

        <Control name="BETTERUI_SpinnerContainerTemplate" virtual="true">
            <OnInitialized>
                ZO_GamepadLabeledQuantitySpinnerContainerTemplate_Initialize(self)
            </OnInitialized>

            <Controls>
                <Backdrop name="$(parent)Highlight" inherits="ZO_GamepadWhiteOutlineHighlight">
                    <Anchor point="TOPLEFT" offsetX="-20" />
                    <Anchor point="BOTTOMRIGHT" offsetX="20" />
                </Backdrop>

                <Label name="$(parent)Label" text="SI_GAMEPAD_QUANTITY_SPINNER_TEMPLATE_LABEL" font="ZoFontGamepad27" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" modifyTextType="UPPERCASE">
                    <Anchor point="LEFT" />
                </Label>

                <Control name="$(parent)Spinner" inherits="BETTERUI_GamepadSpinner">
                    <Anchor point="CENTER" />
                    <Dimensions x="97" y="42" />
                    <Controls>
                        <Label name="$(parent)Display" font="ZoFontGamepad42" override="true" />
                    </Controls>
                </Control>

                <Label name="$(parent)Price" horizontalAlignment="RIGHT" hidden="true" inherits="ZO_CurrencyTemplate">
                    <Anchor point="RIGHT" />
                </Label>
            </Controls>
        </Control>

        <Control name="BETTERUI_GoldSpinnerContainerTemplate" virtual="true">
            <Controls>


                <Texture name="$(parent)CurrencyTexture" textureFile="EsoUI/Art/currency/gamepad/gp_gold.dds">
                    <Dimensions x="28" y="28"/>
                    <Anchor point="RIGHT" offsetX="-35"/>
                </Texture>

                <Control name="$(parent)Selector" inherits="ZO_GamepadCurrencySelectorTemplate">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)CurrencyTexture" relativePoint="TOPLEFT" offsetX="-10"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)CurrencyTexture" relativePoint="BOTTOMLEFT" offsetX="-10"/>
                </Control>
            </Controls>
        </Control>


        <Control name="BETTERUI_HeaderRow_Template" inherits="BETTERUI_GamepadMenuEntryLabelSizedTemplate" virtual="true">
               <!--  <Dimensions y="32" /> -->
                <Anchor point="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING"/>
                <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_LIST_ENTRY_WIDTH"/>

                <Controls>
                    <Label name="$(parent)Label" inherits="BETTERUI_MenuEntryLabelTemplate" font="ZoFontGamepad27">
                            <Anchor point="TOPLEFT" offsetX="15"/>
                    </Label>
                </Controls>
        </Control>


        <Control name="BETTERUI_GenericEntry_Template" inherits="BETTERUI_GamepadMenuEntryLabelSizedTemplate" virtual="true">
           <!--  <Dimensions y="32" /> -->
            <Anchor point="TOPLEFT" offsetX="55"/>
            <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_LIST_ENTRY_WIDTH"/>

            <Controls>
                <Label name="$(parent)Label" inherits="BETTERUI_MenuEntryLabelTemplate" font="ZoFontGamepad27">
                        <Anchor point="TOPLEFT" offsetX="28"/>
                </Label>
                <Texture name="$(parent)Icon" inherits="BETTERUI_MenuEntryIconTemplate" edgeColor="00000000">
                </Texture>
                <Label name="$(parent)ItemType" inherits="BETTERUI_GamepadSubMenuEntryLabelTemplate" text="NONE" font="ZoFontGamepad27" override="true" verticalAlignment="CENTER" horizontalAlignment="LEFT" excludeFromResizeToFitExtents="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" offsetX="485"/>
                </Label>
                <Label name="$(parent)Stat" inherits="BETTERUI_GamepadSubMenuEntryLabelTemplate" text="-" font="ZoFontGamepad27" override="true" verticalAlignment="CENTER" horizontalAlignment="LEFT" excludeFromResizeToFitExtents="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" offsetX="679"/>
                </Label>
                <Label name="$(parent)Value" inherits="BETTERUI_GamepadSubMenuEntryLabelTemplate" text="0" font="ZoFontGamepad27" override="true" verticalAlignment="CENTER" horizontalAlignment="LEFT" excludeFromResizeToFitExtents="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" offsetX="744"/>
                </Label>
            </Controls>
        </Control>

		<Label name="BETTERUI_GenericColumn_Label" inherits="BETTERUI_GenericColumn_TextTemplate BETTERUI_HeaderTitleAnchors" text="..." virtual="true">
                <Anchor point="LEFT" relativeTo="$(parent)TabBar" relativePoint="BOTTOMLEFT" offsetX="28" />
                <Anchor point="RIGHT" relativeTo="$(parent)TabBar" relativePoint="BOTTOMRIGHT" offsetX="2" offsetY="95" />
         </Label>

        <Control name="BETTERUI_GenericInterfaceHeader" resizeToFitDescendents="true" virtual="true">
            <Anchor point="TOPLEFT" />
            <Anchor point="TOPRIGHT" />

            <Controls>
                <Control name="$(parent)TabBar" inherits="BETTERUI_GamepadTabBarScrollListTemplate" hidden="false">
                    <Anchor point="TOPLEFT" offsetY="110" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING"/>
                    <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" />
                    <Controls>
                         <Button name="$(parent)LeftIcon" hidden="true">
                            <Dimensions x="50" y="50"/>
                            <Anchor point="LEFT" relativeTo="$(parent)"/>
                            <Textures normal="EsoUI/Art/Buttons/Gamepad/Xbox/Nav_XBone_LB.dds"/>
                            <OnClicked>
                                self:GetParent().header:MovePrev(true)
                            </OnClicked>
                        </Button>
                        <Button name="$(parent)RightIcon" hidden="true">
                            <Dimensions x="50" y="50"/>
                            <Anchor point="RIGHT" relativeTo="$(parent)" offsetX="-25"/>
                            <Textures normal="EsoUI/Art/Buttons/Gamepad/Xbox/Nav_XBone_RB.dds"/>
                            <OnClicked>
                                self:GetParent().header:MoveNext(true)
                            </OnClicked>
                        </Button>

                        <Control name="$(parent)DividerBottomF" inherits="BETTERUI_GamepadHeaderHorizontalDivider">
                            <Anchor point="LEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0" />
                            <Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="77" />
                        </Control>
                        <Control name="$(parent)DividerBottomS" inherits="BETTERUI_GamepadHeaderHorizontalDivider">
                            <Anchor point="LEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0" />
                            <Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="81" />
                        </Control>
                    </Controls>
                </Control>

                <Control name="$(parent)TitleContainer" inherits="BETTERUI_HeaderTitleAnchors">
                    <Controls>
                         <Label name="$(parent)Title" inherits="BETTERUI_GamepadScreenHeaderTitleTextTemplate" text="|cFF6600 |r" hidden="false">
                            <Anchor point="TOPLEFT" />
                        </Label>
                    </Controls>
                </Control>

                <Control name="$(parent)DividerBottom" inherits="BETTERUI_GamepadHeaderHorizontalDivider">
                    <Anchor point="LEFT" relativeTo="$(parent)TabBar" relativePoint="BOTTOMLEFT" offsetX="0" />
                    <Anchor point="RIGHT" relativeTo="$(parent)TabBar" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="110" />
                </Control>
            </Controls>
        </Control>



        <Control name="BETTERUI_VerticalDivider" resizeToFitDescendents="true" virtual="true">
            <Controls>
                <Texture name="$(parent)Backdrop" textureFile="BetterUI/Modules/Banking/Images/nav_vert.dds">
                    <Anchor point="CENTER" offsetX="4"/>
                    <Dimensions x="9" y="90"/>
                </Texture>
            </Controls>
        </Control>


        <Control name="BETTERUI_GenericInterfaceFooter" resizeToFitDescendents="false" virtual="true">
           <Anchor point="TOPLEFT" />
            <Anchor point="TOPRIGHT" />

            <Controls>

                <Texture name="$(parent)SelectBg" textureFile="BetterUI/Modules/Banking/Images/selectbg.dds">
                    <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_PANEL_WIDTH" y="90" />
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="5" offsetY="210" />
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT"/>
                </Texture>
                <Control name="$(parent)DividerCentre" inherits="BETTERUI_VerticalDivider">
                    <Anchor point="LEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0"/>
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetY="6" />
                </Control>

                <Control name="$(parent)DividerBottomT" inherits="BETTERUI_GamepadFooterHorizontalDivider">
                    <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_LIST_ENTRY_HWIDTH" y="5" />
                    <Anchor point="CENTER" relativeTo="$(parent)SelectBg" relativePoint="CENTER" offsetX="0" />
                    <Anchor point="TOPLEFT" relativeTo="$(parent)SelectBg" relativePoint="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" offsetY="0" />
                </Control>

                <Control name="$(parent)DividerBottomB" inherits="BETTERUI_GamepadFooterHorizontalDivider">
                    <Dimensions x="BETTERUI_GAMEPAD_DEFAULT_LIST_ENTRY_HWIDTH" y="5" />
                    <Anchor point="CENTER" relativeTo="$(parent)SelectBg" relativePoint="CENTER" offsetX="0" />
                    <Anchor point="TOPLEFT" relativeTo="$(parent)SelectBg" relativePoint="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" offsetY="6" />
                </Control>

                <Control name="$(parent)Withdraw">
                    <Anchor point="LEFT" relativeTo="$(parent)DividerBottomT" relativePoint="TOPLEFT" offsetX="40" offsetY="45" />
                    <Controls>
                        <Button name="$(parent)Button">
                            <Dimensions x="250" y="30" />
                            <Anchor point="LEFT" offsetX="155"/>
                            <OnClicked>
                                BETTERUI.Banking.Window:ToggleList(true)
                            </OnClicked>
                            <Controls>
                                <Label name="$(parent)Label" text="SI_BETTERUI_BANKING_WITHDRAW" horizontalAlignment="LEFT" inherits="BETTERUI_FooterTemplate">
                                    <Anchor point="LEFT" offsetX="70" offsetY="-10"/>
                                </Label>
                                <Label name="$(parent)SpaceLabel" text="|t24:24:/esoui/art/icons/mapkey/mapkey_bank.dds|t 10/180" horizontalAlignment="RIGHT" inherits="BETTERUI_FooterSmallTemplate">
                                    <Anchor point="LEFT" offsetX="70" offsetY="25"/>
                                </Label>
                            </Controls>
                        </Button>
                        <Texture name="$(parent)Icon" textureFile="/esoui/art/bank/bank_tabicon_withdraw_up.dds" level="2">
                            <Dimensions x="64" y="64" />
                            <Anchor point="LEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT"/>
                            <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetY="0"  />
                        </Texture>
                    </Controls>
                </Control>

                <Control name="$(parent)Deposit">

                    <Anchor point="RIGHT" relativeTo="$(parent)DividerBottomT" relativePoint="TOPRIGHT" offsetX="0" offsetY="45"/>
                    <Controls>
                        <Button name="$(parent)Button">
                            <Dimensions x="250" y="30" />
                            <Anchor point="RIGHT" offsetX="-205"/>
                            <OnClicked>
                                BETTERUI.Banking.Window:ToggleList(false)
                            </OnClicked>
                            <Controls>
                                <Label name="$(parent)Label" text="SI_BETTERUI_BANKING_DEPOSIT" horizontalAlignment="RIGHT" inherits="BETTERUI_FooterTemplate" color="444444">
                                    <Anchor point="RIGHT" offsetX="-100" offsetY="-10"/>
                                </Label>
                                <Label name="$(parent)SpaceLabel" text="|t24:24:/esoui/art/inventory/gamepad/gp_inventory_icon_all.dds|t 70/112" horizontalAlignment="RIGHT" inherits="BETTERUI_FooterSmallTemplate">
                                    <Anchor point="RIGHT" offsetX="-100" offsetY="25"/>
                                </Label>
                            </Controls>
                        </Button>
                        <Texture name="$(parent)Icon" textureFile="/esoui/art/bank/bank_tabicon_deposit_up.dds" level="2">

                            <Anchor point="RIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT"/>

                            <Dimensions x="64" y="64" />
                        </Texture>
                    </Controls>
                </Control>
            </Controls>
        </Control>

        <TopLevelControl name="BETTERUI_BankingFooterBar" level="120" tier="2" layer="1" hidden="true">
            <Controls>
	            <Label name="$(parent)Data1Value" level="0" tier="2" layer="2" text="100,000" font="ZoFontGamepad36" wrapMode="ELLIPSIS" modifyTextType="UPPERCASE" color="FFBF00">
		            <Dimensions y="36" />
		            <Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot" relativePoint="BOTTOMRIGHT" offsetX="-300" offsetY="-65" />
	            </Label>
                <Label name="$(parent)Data1Header" level="0" tier="2" layer="2" text="|t32:32:esoui/art/currency/currency_gold_32.dds|t" font="ZoFontGamepad34" wrapMode="ELLIPSIS" modifyTextType="UPPERCASE">
                    <Dimensions y="32" />
	                <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Data1Value" relativePoint="BOTTOMRIGHT" offsetX="" offsetY="-2" />
                </Label>
                <Label name="$(parent)Data2Value" level="0" tier="2" layer="2" text="100,000" font="ZoFontGamepad36" wrapMode="ELLIPSIS" modifyTextType="UPPERCASE" color="0066FF">
                    <Dimensions y="36" />
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Data1Header" relativePoint="BOTTOMRIGHT" offsetX="25" />
                </Label>
	            <Label name="$(parent)Data2Header" level="0" tier="2" layer="2" text="|t32:32:esoui/art/currency/currency_telvar_32.dds|t" font="ZoFontGamepad34" wrapMode="ELLIPSIS" modifyTextType="UPPERCASE">
		            <Dimensions y="32" />
		            <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Data2Value" relativePoint="BOTTOMRIGHT" offsetX="10" offsetY="-2" />
	            </Label>
            </Controls>
        </TopLevelControl>

		<TopLevelControl name="BETTERUI_GenericInterface" hidden="true" virtual="true">
            <Controls>
                <Control name="$(parent)Loading" hidden="true" inherits="ZO_GamepadCenteredLoadingIconAndLabelTemplate" text="Loading list..." />

                <Control name="$(parent)Container" inherits="BETTERUI_NavQuadrant_1_ContainerAnchors">
                    <Controls>

                        <Control name="$(parent)Footer" inherits="BETTERUI_NavQuadrant_1_Anchors">
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" offsetY="-60" relativeTo="GuiRoot"/>
                            <Dimensions y="90" />
                            <Controls>
                                <Control name="$(parent)Footer" inherits="BETTERUI_GenericInterfaceFooter" override="true">
                                    <Anchor point="BOTTOMLEFT" offsetY="-60"/>
                                    <Dimensions y="90" x="BETTERUI_GAMEPAD_DEFAULT_PANEL_WIDTH" />

                                    <OnInitialized>
                                        self:GetParent().footer = self
                                    </OnInitialized>
                                </Control>
                            </Controls>
                        </Control>

                        <Control name="$(parent)Header" inherits="BETTERUI_NavQuadrant_1_Anchors">
                            <Anchor point="TOPLEFT"/>
                            <Dimensions y="115" x="BETTERUI_GAMEPAD_DEFAULT_PANEL_WIDTH" />

		                    <Controls>
                                <Control name="$(parent)Header" inherits="BETTERUI_GenericInterfaceHeader">
                                    <Dimensions y="115" x="BETTERUI_GAMEPAD_DEFAULT_PANEL_WIDTH" />
                                    <OnInitialized>
                                        self:GetParent().header = self
                                    </OnInitialized>
                                </Control>
		                        <Control name="$(parent)HeaderColumnBar" inherits="BETTERUI_HeaderTitleAnchors" />
		                   </Controls>
		                </Control>


                        <Control name="$(parent)List" inherits="BETTERUI_NavQuadrant_1_Anchors BETTERUI_Generic_ScrollListTemplate">
							<Anchor point="TOPLEFT" relativeTo="$(parent)HeaderHeader" relativePoint="BOTTOMLEFT" offsetX="0"/> 
                            <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)FooterFooter" relativePoint="TOPRIGHT" /> 
							
                            <OnInitialized>
                                self:GetParent().list = self
                            </OnInitialized>

                            <Controls>
                                <Label name="$(parent)NoItemsLabel"  font="ZoFontGamepadCondensed36" horizontalAlignment="CENTER" text="Nothing in list">
                                    <Anchor point="TOPLEFT" offsetX="BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" />
                                    <Anchor point="BOTTOMRIGHT" offsetX="-BETTERUI_GAMEPAD_DEFAULT_HORIZ_PADDING" />
                                </Label>
                                <Control name="$(parent)SpinnerContainer" inherits="BETTERUI_SpinnerContainerTemplate" hidden="true">
                                    <Dimensions y="45" x="BETTERUI_GAMEPAD_DEFAULT_LIST_ENTRY_WIDTH"/>
                                    <Anchor point="CENTER" relativeTo="$(parent)ListScreenCenterIsAlongTopListScreenCenter" offsetX="20" />

                                </Control>
                            </Controls>
                        </Control>

                        <Control name="$(parent)InputContainer" inherits="BETTERUI_GoldSpinnerContainerTemplate" hidden="true">
                                    <Dimensions y="30"/>
                                    <Anchor point="LEFT" relativeTo="$(parent)ListListScreenCenterIsAlongTopListScreenCenter" offsetX="200" />
                                    <Anchor point="RIGHT" relativeTo="$(parent)ListListScreenCenterIsAlongTopListScreenCenter" offsetX="200" />
                        </Control>

                    </Controls>
                </Control>


            </Controls>
        </TopLevelControl>
	</Controls>
</GuiXml>
